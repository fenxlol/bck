ilyo_kwan,203,125,4	script	Rumin#tg	638,{
	cutin "thf_lumin01",2;
	switch (q_tg) {
		case 7:
			mes "[Rumin]";
			mes "Veo que te han mandado conmigo.";
			next;
			mes "[Rumin]";
			mes "Pues ya sé a lo que va esto.";
			next;
			mes "[Rumin]";
			mes "Quiero que prestes mucha atención porque al final ^ff8800 te voy a preguntar^000000";
			next;
			cutin "booking",4;
			mes "[Rumin]";
			mes "Existe un comando llamado ^5533ff/booking^000000 que te permite abrir una ventana para el reclutamiento de party.";
			next;
			mes "[Rumin]";
			mes "Las party son grupos que se dedican a subir de nivel juntos, matar fuertes monstruos o recolectar objetos en lugares dificiles.";
			next;
			mes "[Rumin]";
			mes "Generalmente es muy dificil encontrar una party capaz, pero gracias a esta herramienta eso se terminó.";
			next;
			cutin "thf_lumin01",2;
			mes "[Rumin]";
			mes "Entonces dime, ¿qué comando se utiliza para buscar una party?";
			next;
			input @resp$;
			if(@resp$ != "/booking") {
				mes "[Rumin]";
				mes "Si no vas a prestar atención, nunca te dejaré salir de aquí.";
				close2;
				cutin "",255;
				end;
			}
			mes "[Rumin]";
			mes "Muy bien, siempre ten en cuenta utilizar este comando, no solamente se utiliza para buscar party.";
			next;
			mes "[Rumin]";
			mes "Si no que también para buscar miembros específicos para una party.";
			next;
			cutin "recruit",4;
			mes "[Rumin]";
			mes "Para buscar miembros específicos debes de utilizar el comando ^5533ff/recruit^000000, de esa manera podrás hacer una party más rápido.";
			next;
			mes "[Rumin]";
			mes "Pero antes de eso debes de tener una party creada con ^5533ff/organize^000000";
			next;
			cutin "thf_lumin01",2;
			mes "[Rumin]";
			mes "Nunca olvides mis consejos, pero te preguntaré por si acaso.";
			next;
			mes "[Rumin]";
			mes "¿Qué comando se utiliza para reclutar jugadores especificos?";
			next;
			input @resp$;
			if(@resp$ != "/recruit") {
				mes "[Rumin]";
				mes "Pon más atención.";
				close2;
				cutin "",255;
				end;
			}
			mes "[Rumin]";
			mes "De acuerdo, es todo lo que te quería enseñar, ya te puedes ir.";
			close2;
			set q_tg,8;
			cutin "",255;
			end;
		case 8:
			mes "[Rumin]";
			mes "Ya no tengo nada más que enseñarte, adios.";
			close2;
			cutin "",255;
			end;
		default:
			mes "[Rumin]";
			mes "Estoy algo ocupado aquí, no molestes.";
			close2;
			cutin "",255;
			end;
	}
}
