ilyo_kwan,157,116,4	script	Coordinadora#tg	641,{
	cutin "acact_01",2;
	switch (q_tg) {
		case 0:
			mes "[Coordinadora]";
			mes "...¿qué sucede?";
			close2;
			cutin "",255;
			end;
		case 1:
			mes "[Coordinadora]";
			mes "¿Cómo estás?";
			mes "Mi trabajo es darle la bienvenida a todas aquellas personas que deseen ser aventureros.";
			next;
			mes "[Coordinadora]";
			mes "Antes de proseguir por favor dame tu nombre.";
			next;
			input @name$;
			if(@name$ != strcharinfo(0)) {
				mes "[Coordinadora]";
				mes "Lo siento pero no te entendí.";
				close2;
				emotion e_sry;
				cutin "",255;
				end;
			}
			mes "[Coordinadora]";
			mes "De acuerdo, "+strcharinfo(0)+".";
			next;
			mes "[Coordinadora]";
			mes "Te he registrado como un aventurero oficial del continente.";
			next;
			mes "[Coordinadora]";
			mes "Ahora lo que sigue, antes de salir al mundo es obligatorio que tomes un pequeño entrenamiento.";
			next;
			mes "[Coordinadora]";
			mes "Por ello hemos preparado ésta hermosa tierra como un campo de entrenamiento intensivo para que aprendas todo lo que ocupas.";
			next;
			mes "[Coordinadora]";
			mes "No podrás ir a visitar al mundo sin haber visto todo aquí, sería muy peligroso.";
			next;
			mes "[Coordinadora]";
			mes "Muy bien empecemos, primeramente por favor busca al ^5533ffEntrenador de Batalla^000000.";
			close2;
			emotion e_no1;
			cutin "",255;
			set q_tg,2;
			end;
		case 2:
			mes "[Coordinadora]";
			mes "Ve con el Entrenador de Batalla por favor.";
			close2;
			cutin "",255;
			end;
		default:
			mes "[Coordinadora]";
			mes "No tienes ya ningún asunto pendiente conmigo.";
			close2;
			cutin "",255;
			end;
	}
end;
}
