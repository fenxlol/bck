lasa_fild02,97,45,4	script	Olio	10155,{
	mes "[Olio]";
	if(Class != 4218) {
		mes "Me encargo de recibir a los nuevos gato-aventureros al mundo.";
		close;
	}
	if(DR_REC < 1) {
		mes "Bienvenido a Lasagna, nuestra tierra y capital.";
		next;
		mes "[Olio]";
		mes "Antes de salir de la isla te recomiendo subir un poco tu nivel y recolectar equipo básico.";
		next;
		mes "[Olio]";
		mes "Si vas a la izquierda desde aquí, llegarás a la ciudad, allí encontrarás todo lo que ocupas.";
		next;
		mes "[Olio]";
		mes "Te deseo la mejor de las suertes.";
		DR_REC = 1;
		close;
	}
	mes "Si vas a la izquierda desde aquí, llegarás a la ciudad, allí encontrarás todo lo que ocupas.";
	close;
}