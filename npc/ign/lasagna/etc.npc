lasagna,197,173,4	script	Charle	10166,{
	mes "[Charle]";
	mes "Me pregunto por qué nuestros árboles tienen chocolate...";
	next;
	mes "[Billy]";
	donpcevent "Billy::OnEmotion1";
	mes "Es uno de los productos que exportamos, hacemos pan con ellos, no sé como, pero lo hacemos.";
	next;
	mes "[Charle]";
	mes "Y si es una ciudad de gatos... para qué tiene quesos en las calles.";
	next;
	donpcevent "Billy::OnEmotion2";
	mes "[Billy]";
	mes "¿Pues qué crees que comen los gatos? Usamos para cazar eso.";
	close;
}
