moro_vol,113,82,5	script	Commander Hiva Agip	459,{
	cutin "ep13_captin_edq",2;
	mes "[Commander Hiva Agip]";
	if(BaseLevel < 140) {
		mes "Estamos investigando sobre la entrada de una caverna, vuelve cuando tengas más experiencia, no necesitamos novatos.";
		close2;
		cutin "",255;
		end;
	}
	mes "Hemos encontrado una apertura hacia una caverna muy misteriosa.";
	next;
	mes "[Commander Hiva Agip]";
	mes "Según nuestros investigadores, han descubierto que se trata del santuario donde nacen los grandes demonios.";
	next;
	mes "[Commander Hiva Agip]";
	mes "Dentro podrás combatir al mal para liberar de la faz del reino todo el mal de una vez por todas.";
	next;
	mes "[Commander Hiva Agip]";
	mes "¿Deseas entrar?";
	next;
	if(select("Entrar:Salir") == 2) {
		mes "[Commander Hiva Agip]";
		mes "Como quieras.";
		close2;
		cutin "",255;
		end;
	}
	warp "moro_cav",53,18;
	close2;
	cutin "",255;
	end;
OnPCLoadMapEvent:
	if(strcharinfo(3) == "moro_vol" && BaseLevel >= 140)
		showevent 0,1;
	end;
}
