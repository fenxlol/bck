	mes "Ahora que Morroc ha sido reconstruida hemos dejado el paso libre al volcán que se formó cerca de la ciudad.";
	next;
	mes "[Devoy]";
	mes "Si quieres ir allí deberás de traerme ^5533ff50 Trunk^000000";
	next;
	mes "[Devoy]";
	mes "Es para construirte una puerta segura, es decir el marco, para que puedas entrar.";
	next;
	mes "[Devoy]";
	mes "Aquí te espero.";
	close2;
	set devoy_q,1;
	end;
}
