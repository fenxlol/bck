morocc,166,113,4	script	Devoy::mol1	10027,{
	if(devoy_q == 1) {
		if(countitem(1019) >=50) {
			delitem 1019,50;
			mes "[Devoy]";
			mes "Perfecto, entonces te abriré la entrada al Volcán.";
			close2;
			set devoy_q,2;
			end;
		}
		mes "[Devoy]";
		mes "Debes de traerme ^5533ff50 Trunk^000000 para construirte una entrada al volcán.";
		close2;
		emotion e_sry;
		end;
	}
	if(devoy_q == 2) {
		mes "[Devoy]";
		mes "¿Deseas entrar al volcán?";
