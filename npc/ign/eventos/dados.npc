-	script	DiceEvent	-1,{
OnDiceStart:
	mapannounce "quiz_02","Vamos a empezar con el evento de dados.",bc_blue;
	sleep2 3500:
	mapannounce "quiz_02","Las reglas son simples:",bc_blue;
	sleep2 3500:
	mapannounce "quiz_02","Voy a elegir un número del 1 al 4. Pero antes contaré del 5 al 0.",bc_blue;
	sleep2 3500:
	mapannounce "quiz_02","Lo único que tienes que hacer es elegir una de las 4 salas.",bc_blue;
	sleep2 3500:
	mapannounce "quiz_02","Por ejemplo, si yo elijo el número 4, todos los jugadores de las salas 1 a la 3 perderán.",bc_blue;
	sleep2 3500:
	mapannounce "quiz_02","Lo seguiremos haciendo hasta que quede un usuario en la sala.",bc_blue;
	sleep2 2000;
	mapannounce "quiz_02","Antes de continuar, asegúrate estar DENTRO DE LA SALA, si estás fuera de alguna sala serás automáticamente descalificado.",bc_blue;
	sleep2 2000;
	mapannounce "quiz_02","Eso es todo... ¡comencemos!",bc_blue;
	sleep2 3000;
	while (1) {
		enablenpc "Regresar#1";
		enablenpc "Regresar#2";
		enablenpc "Regresar#3";
		enablenpc "Regresar#4";
		enablenpc "Sala 1#1";
		enablenpc "Sala 2#2";
		enablenpc "Sala 3#3";
		enablenpc "Sala 4#4";
		callsub S_Check;
		if(getmapusers("quiz_02") > 1) {
			set .@n,rand(1,4);
			sleep2 3500:
			mapannounce "quiz_02","De acuerdo, elegiré un número al azar del 1 al 4.",bc_blue;
			sleep2 20000;
			mapannounce "quiz_02","5",bc_blue;
			sleep2 1500;
			mapannounce "quiz_02","4",bc_blue;
			sleep2 1500;
			mapannounce "quiz_02","3",bc_blue;
			sleep2 1500;
			mapannounce "quiz_02","2",bc_blue;
			sleep2 1500;
			mapannounce "quiz_02","1",bc_blue;
			disablenpc "Sala 1#1";
			disablenpc "Sala 2#2";
			disablenpc "Sala 3#3";
			disablenpc "Sala 4#4";
			disablenpc "Regresar#1";
			disablenpc "Regresar#2";
			disablenpc "Regresar#3";
			disablenpc "Regresar#4";
			areawarp "quiz_02",32,95,79,76,"prontera",150,180;
			areawarp "quiz_02",80,85,80,76,"prontera",150,180;
			areawarp "quiz_02",31,85,31,76,"prontera",150,180;
			callsub S_Check;
			set .@n,rand(1,4);
			sleep2 1000;
			mapannounce "quiz_02","Se acabo el tiempo,¡el número ganador es "+.@n+"!",bc_blue;
			if(.@n == 4) {
				areawarp "quiz_02",33,73,41,52,"prontera",150,180;
				areawarp "quiz_02",45,73,53,52,"prontera",150,180;
				areawarp "quiz_02",57,73,65,52,"prontera",150,180;
			}
			if(.@n == 3) {
				areawarp "quiz_02",33,73,41,52,"prontera",150,180;
				areawarp "quiz_02",45,73,53,52,"prontera",150,180;
				areawarp "quiz_02",69,73,77,52,"prontera",150,180;
			}
			if(.@n == 2) {}
				areawarp "quiz_02",33,73,41,52,"prontera",150,180;
				areawarp "quiz_02",57,73,65,52,"prontera",150,180;
				areawarp "quiz_02",69,73,77,52,"prontera",150,180;
			}
			if(.@n == 1) {
				areawarp "quiz_02",45,73,53,52,"prontera",150,180;
				areawarp "quiz_02",57,73,65,52,"prontera",150,180;
				areawarp "quiz_02",69,73,77,52,"prontera",150,180;
			}
		}
		callsub S_check;
	} // While (Se repite)
end;
S_Check:
	if(getmapusers("quiz_02") < 2) {
		enablenpc "¡Premio!#dice";
		end;
	}
	if(getmapusers("quiz_02") < 1) {
		announce "¡Nadie ha ganado el Evento de Dados!",bc_all,0x77FF00;
		disablenpc "¡Premio!#dice";
		end;
	}
return;
}

