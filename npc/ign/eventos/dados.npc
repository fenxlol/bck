-	script	DADOS	-1,{
OnDadosEvt:
OnWhisperGlobal:
	donpcevent "dados_npc::OnEnable";
	announce "¡El Evento de Dados comenzará en 2 minutos, ve a Prontera y habla con el NPC para participar!",bc_all,0x77FF00;
	sleep2 60000;
	announce "¡El Evento de Dados comenzará en 1 minuto, ve a Prontera y habla con el NPC para participar!",bc_all,0x77FF00;
	sleep2 40000;
	announce "¡El Evento de Dados comenzará en 20 segundos!",bc_all,0x77FF00;
	sleep2 20000;
	announce "¡El Evento ha comenzado!",bc_all,0x77FF00;
	donpcevent "dados_npc::OnDisable";
	donpcevent "DiceEvent::OnDiceStart";
	end;
OnInit:
	disablenpc "¡Premio!#dice";
	end;
}
prontera,162,175,4	script	Evento de Dados::dados_npc	10110,{
	mes "[^5533ffEvento de Dados^000000]";
	mes "¿En qué te puedo ayudar?";
	while(1) {
		switch(select("Información sobre el evento:^5533ffParticipar^000000 ["+getmapusers("quiz_02")+"]:^777777Salir^000000")) {
			case 1:
				mes "[^5533ffEvento de Dados^000000]";
				mes "Al entrar al evento, y en cuanto inicie, tendrás que elegir una de las 4 salas.";
				next;
				mes "[^5533ffEvento de Dados^000000]";
				mes "Si la sala que elegiste resulta elegida en la suerte del dado, todos los usuarios dentro de esa sala sobrevivirán.";
				next;
				mes "[^5533ffEvento de Dados^000000]";
				mes "Y se continuará haciendo hasta que quede un usuario en la sala.";
				next;
				mes "[^5533ffEvento de Dados^000000]";
				mes "Si resultas ganador obtendrás un fabuloso premio.";
				next;
				break;
			case 2:
				mes "[^5533ffEvento de Dados^000000]";
				mes "De acuerdo, allá vamos.";
				close2;
				warp "quiz_02",55,87;
				end;
			case 3:
				mes "[^5533ffEvento de Dados^000000]";
				mes "Vuelve cuando desees participar.";
				close;
		}
	}
end;
OnEnable:
	enablenpc strnpcinfo(3);
	waitingroom "Evento Dados",0;
	end;
OnDisable:
	delwaitingroom;
OnInit:
	disablenpc strnpcinfo(3);
	end;
}
