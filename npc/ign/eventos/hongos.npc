poring_w02,95,112,4	script	Jefa del Evento::jef_evt	720,{
	if($cnt_evt > 0 && @op < 1)
		set @op,3;
	if($cnt_evt < 1 || @op < 1) {
		mes "[^FF00EEJefa del Evento^000000]";
		mes "El evento consiste en ser el primero en contar los hongos en el mapa y escribir su número con el encargado NPC.";
		next;
		mes "[^FF00EEJefa del Evento^000000]";
		mes "Si eres el primero en hacerlo, serás el ganador.";
		next;
		mes "[^FF00EEJefa del Evento^000000]";
		mes "En cada ronda de éste evento, el número de hongos, es aleatorio, así que no te confíes.";
		close;
	}
	mes "[^FF00EEJefa del Evento^000000]";
	mes "Venga, venga, adivina cuántos hongos hay y te daré el premio ganador.";
	next;
	mes "[^FF00EEJefa del Evento^000000]";
	mes "Sólo tienes ^ff0000"+@op+"^000000 Oportunidades Restantes.";
	next;
	input @cnt;
	if($cnt_evt == 0 && @cnt == 0) {
		mes "[^FF00EEJefa del Evento^000000]";
		mes "¿Así que intentando aprovecharte de un bug?";
		mes "Pues aquí está tu premio.";
		atcommand "@mute "+strcharinfo(0)+" 20";
		close;
	}
	if(@cnt == $cnt_evt) {
		mes "[^FF00EEJefa del Evento^000000]";
		mes "^FF00EE¡Felicidades!^000000, haz ganado, cierra la ventana para recibir tu premio.";
		announce "[Cuenta-Hongos] ¡Felicitaciones!, "+strcharinfo(0)+" ha ganado el evento, acertando a la cantidad de [ "+$cnt_evt+" ] hongos.",bc_all,0xFF00EE;
		callfunc "F_Event",1,rand(1,5);
		set Zeny,Zeny+50000;
		dispbottom "Gained 50,000z";
		set $cnt_evt,0;
		set @op,0;
		sleep2 5000;
		mapwarp "poring_w02","prontera",150,180;
		close;
	}
	set @op,@op-1;
	if(@op < 1) {
		mes "[^FF00EEJefa del Evento^000000]";
		mes "Te haz quedado sin oportunidades, adios.";
		close2;
		set @op,0;
		announce "[Cuenta-Hongos] "+strcharinfo(0)+" ha gastado todas sus oportunidades.",bc_map,0xFF00EE;
		warp "prontera",150,180;
		if(getmapusers("poring_w02") < 1) {
			announce "[Cuenta-Hongos] Nadie adivinó el número de hongos, evento finalizado.",bc_all,0xFF00EE;
			set $cnt_evt,0;
			disablenpc "jev_evt";
			end;
		}
		end;
	}
	mes "[^FF00EEJefa del Evento^000000]";
	mes "Lo siento, pero te haz equivocado, sólo te quedan ^ff0000"+@op+"^000000 Oportunidades Restantes para adivinar el número correcto.";
	close;
}
