prontera,159,178,4	script	Cuenta-Hongos::CUENTE	10047,{
	mes "[^5533ffCuenta-Hongos^000000]";
	mes "¡Hola, ¿deseas participar?";
	next;
	switch(select("Información:^5533ffParticipar^000000 [ ^ff0000"+getmapusers("poring_w02")+"^000000 ]:^777777Salir^000000")) {
		case 1:
			mes "[^5533ffCuenta-Hongos^000000]";
			mes "El evento consiste en ser el primero en contar los hongos en el mapa y escribir su número con el encargado NPC.";
			next;
			mes "[^5533ffCuenta-Hongos^000000]";
			mes "Si eres el primero en hacerlo, serás el ganador.";
			next;
			mes "[^5533ffCuenta-Hongos^000000]";
			mes "En cada ronda de éste evento, el número de hongos, es aleatorio, así que no te confíes.";
			close;
		case 2:
			set @op,0;
			warp "poring_w02",98,110;
			close;
		case 3:
			mes "[^5533ffCuenta-Hongos^000000]";
			mes "Ven de nuevo si deseas participar.";
			close2;
			emotion e_thx;
			end;
	}
OnEnable:
	enablenpc "CUENTE";
	waitingroom "Cuenta-Hongos",0;
	end;
OnDisable:
	delwaitingroom;
OnInit:
	disablenpc "CUENTE";
	end;
}
