			disablenpc "suer"+.@c+"#"+.@i;
		}
		set .@c, .@c + 1;
	}
	end;
OnTimer300000:
	donpcevent "poring_time::OnEnable";
	set $@p_bonus,2;
	set $@p_race,0;
	mapwarp "poringrace","prontera",150,180;
	end;
OnTimer306000:
	donpcevent "poring_time::OnEnable";
	end;
OnTimer342000:
	disablenpc "Encargado de Premios";
	stopnpctimer;
	end;
OnInit:
	disablenpc "Encargado de Premios";
	end;
}

