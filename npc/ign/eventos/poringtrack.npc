	next;
	if (select("¡A darle!","No, gracias") == 2) {
		mes .npc$;
		mes "Ojala y te pongas obeso como los porings de estas carreras.";
		close;
	}
	if (!checkweight(908,700)) {
		mes .npc$;
		mes "Tienes demaciado peso, tanto como los Porings... te abriré el almacén para que te quites unas cuantas cosas, pareces ratero.";
		close2;
		openstorage;
		end;
	}
	if (countitem(7514)) {
		mes .npc$;
		mes "¿Crees que soy idiota?";
		mes "No puedes entrar con un Ticket antiguo, trae para aca.";
		dispbottom "Se te ha eliminado tus Monster Ticket.";
		delitem 7514,countitem(7514);
		next;
		if ($@p_bonus == 1) {
			mes .npc$;
			mes "Bien, todo parece perfecto para dar inicio a la carrera, allí vamos.";
			set poring_e,0;
			close2;
			warp "poringrace",75,41;
			end;
		} else if ($@p_bonus == 2) {
			mes .npc$;
			mes "Estamos finalizando las preparaciones para la próxima carrera, por favor sé paciente.";
			close;
		} 
	} else {
		if ($@p_bonus == 1) {
			mes .npc$;
			mes "Bien, todo parece perfecto para dar inicio a la carrera, allí vamos.";
			set poring_e,0;
			close2;
			warp "poringrace",75,41;
			end;
		} else if ($@p_bonus == 2) {
			mes .npc$;
			mes "Estamos finalizando las preparaciones para la próxima carrera, por favor sé paciente.";
			close;
		}
	}
	if (!.@p_race) {
		mes .npc$;
		mes "Actualmente se está llevando una carrera, por lo cual solo entrarás como espectador.";
		select("Entrar como espectador");
		set poring_e,0;
		close2;
		warp "poringrace",75,41;
		end;
	}
	mes .npc$;
	mes "La carrera ya ha terminado, espera al próximo evento.";
	close;
OnEnable:
	enablenpc "Carrera de Porings";
	end;
OnDisable:
OnInit:
	disablenpc "Carrera de Porings";
	end;
}

