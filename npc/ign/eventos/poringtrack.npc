poringrace,67,45,5	script	Encargado de Premios	845,{
	set .npc$,"[^5533ffEncargado de Premios^000000]";
	if (!checkweight(908,200)) {
		mes .npc$;
		mes "Tienes demaciadas cosas en tu inventario, te abriré el almacén para que las deposites.";
		close2;
		openstorage;
		end;
	}
	set .@insa,rand(1,1000);
	if (countitem(7514)) {
		mes .npc$;
		mes "¡Hola, hola!";
		mes "Si apostaste por el Poring Regordete que ganó recientemente, lo puedes cambiar por un premio.";
		next;
		mes .npc$;
		mes "Recuerda que los objetos que recibirás son al azar, así que te pueden tocar cosas distintas cada vez que juegues.";
		next;
		if ($@p_race) {
			if (poring_e == $@p_race) {
				mes .npc$;
				mes "¡Oh, felicidades!";
				mes "Tienes un ticket ganador de la Carrera de Poring Regordetes.";
				next;
				mes .npc$;
				mes "Para verificar esto por favor dime tú nombre.";
				next;
				input .@input$;
				if (.@input$ == strcharinfo(0)) {
					mes .npc$;
					mes "Ahora para validarlo deberás colocar el nombre de tú ticket. El número de tu ticket es ^ff0000"+.@insa+"^000000.";
					next;
					input .@input;
					if (!.@input) {
						mes .npc$;
						mes "¿No quieres cambiarlo?";
						mes "Por favor intenta nuevamente cuando quieras cambiarlo.";
						close;
					} else if (.@input == .@insa) {
						mes .npc$;
						mes "De acuerdo, haz colocado el número correcto.";
						next;
						mes .npc$;
						mes "Todo parece estar en orden, prosigamos.";
						next;
						mes .npc$;
						mes "¡Ahora veamos qué premio te toca!";
						progressbar "008800",5;
						delitem 7514,1;
						set poring_e,0;
						set .@i,1;
						while (.@i <= 2) {
							switch (rand(1,3)) {
								case 1:
									callfunc "F_Event",1,rand(1,5);
									break;
								case 2:
									callfunc "F_Event",1,rand(5,10);
									break;
								case 3:
									callfunc "F_Event",1,rand(10,15);
									break;
							}
							set .@i,.@i +1;
							sleep2 800;
						}
						next;
						mes .npc$;
						mes "Bien, espero verte aquí nuevamente otra vez.";
						close2;
						emotion e_thx;
						emotion e_no1,strcharinfo(0);
						end;
					}
					mes .npc$;
					mes "El código es incorrecto, por favor verifícalo nuevamente.";
					close2;
					emotion e_sry;
					emotion e_sob,strcharinfo(0);
					end;
				}
				mes .npc$;
				mes "¿Qué es esto?";
				mes "Según mis registros ^5533ff"+.@input$+"^000000 no está registrado en el evento, ^ff0000por favor confírmalo^000000.";
				close2;
				emotion e_swt;
				emotion e_swt,strcharinfo(0);
				end;
			}
			mes .npc$;
			mes "Lamentablemente el Poring Regordete por el que has apostado no ha ganado ningún lugar, por favor vuelve en otro momento.";
			close2;
			emotion e_sry;
			emotion e_omg,strcharinfo(0);
		}
	}
	mes .npc$;
	mes "¡Hola!";
	mes "Yo entrego los premios a aquellos participantes que hayan ganado una Carrera de Porings Regordetes.";
	next;
	mes .npc$;
	mes "Si llegas a ganar, por favor ven conmigo y te daré tu premio sin falta.";
	close2;
	emotion e_no1;
	emotion e_ok,strcharinfo(0);
	end;
OnEnable:
	emotion e_gasp;
	enablenpc "Encargado de Premios";
	initnpctimer;
	end;
OnTimer1000:
	mapannounce "poringrace","¡La carrera ha terminado, muchísimas felicidades a los ganadores!",bc_map,"0xFFFF00";
	end;
OnTimer4000:
	mapannounce "poringrace","Por favor dale tu Ticket al Encargado de Premios para que puedas recibir tu premio.",bc_map,"0xFFFF00";
	npctalk "Si ganaste ven a darme tu Ticket, te daré tu premio.";
	end;
OnTimer7000:
	mapannounce "poringrace","Tienes 5 minutos para reclamar tu premio con el Encargado de Premios",bc_map,"0xFFFF00";
	end;
OnTimer10000:
	mapannounce "poringrace","Todos los tickets ganadores en esta ronda serán denegados, y no tendrán premio en caso de que no los cobren a los 5 minutos.",bc_map,"0xFFFF00";
	end;
OnTimer13000:
	mapannounce "poringrace","Por favor sal de la arena antes de que los 5 minutos hayan pasado, gracias.",bc_map,"0xFFFF00";
	end;
OnTimer240000:
	mapannounce "poringrace","Atención, la Carrera de Porings Regordetes cerrará próximamente, por favor salga de la arena.",bc_map,"0xFFFF00";
	end;
OnTimer243000:
	mapannounce "poringrace","La Carrera de Porings Regordetes se cerrará en un minuto.",bc_map,"0xFFFF00";
	end;
OnTimer246000:
	mapannounce "poringrace","Participantes de la anterior carrera por favor salgan.",bc_map,"0xFFFF00";
	end;
OnTimer249000:
	mapannounce "poringrace","Gracias por su cooperación y comprensión.",bc_map,"0xFFFF00";
	end;
OnTimer252000:
	mapannounce "poringrace","Esperamos y hayas disfrutado de la Carrera de Porings Regordetes, te esperamos pronto ~",bc_map,"0xFFFF00";
	for (set .@i, 1; .@i <= 6; set .@i, .@i + 1) {
