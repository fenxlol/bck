OnNPCKillEvent:
	if(BaseLevel < 99)
		end;
	if(getmonsterinfo(killedrid,MOB_MVPEXP) > 0)
		set @prob,100;
	set @mblvl,BaseLevel-getmonsterinfo(killedrid,MOB_LV);
	if ( @mblvl < 0 || @mblvl < 1)
		set @prob,50;
	else if ( @mblvl >= 10 && @mblvl < 30)
		set @prob,40;
