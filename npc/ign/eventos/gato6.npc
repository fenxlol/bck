		set @prob,20;
	else if ( @mblvl >= 50 && @mblvl < 100)
		set @prob,10;
	else if ( @mblvl > 100 )
		set @prob,5;
	if(rand(1,100) < @prob)
		getitem 7360,1;
	end;
