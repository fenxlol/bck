moonhaven,209,195,4	script	Guía de Novatos::training01	702,{
	if(ign_tground == 0)
		set ign_tground,1;
	switch (ign_tground) {
		case 1:
			mes "^5533ffGuía de Novatos^000000";
			mes "¡Hola, hola!";
			mes "¿Pero qué tenemos aquí?";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "¿Acaso un"+(Sex ? "" : "a")+" nuev"+(Sex ? "o" : "a")+" viajer"+(Sex ? "o" : "a")+"?";
			mes "Pues permíteme darte una calurosa bienvenida.";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "Actualmente te encuentras en la zona de entrenamiento de novatos.";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "Este es un lugar diseñado por nuestros creadores para poder orientarte en todas las dinámicas que éste mundo tiene para tí.";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "^ff0000Es muy recomendable que la tomes si eres nuevo en éste mundo^000000";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "Aún cuando hayas conocido a algunos parecidos éste pequeño tutorial te limpiará de dudas";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "También me permito decirte que si completas el tutorial se te dará una recompenza.";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "Entonces dime, ¿deseas tomar el tutorial o ir directamente a la aventura?";
			next;
				if(select("Quiero aprender más, tutorial.","Pero que perdida de tiempo, ¡aventura!") == 2) {
					mes "^5533ffGuía de Novatos^000000";
					mes "De acuerdo, que la suerte te acompañe, que lástima que no te pudimos dar tus premios.";
					close2;
					warp "prontera",150,180;
					savepoint "prontera",150,180;
					end;
				}
			mes "^5533ffGuía de Novatos^000000";
			mes "Bien, empezaremos con lo básico de lo básico.";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "Por favor dirígete con el ^5533ffGuía de Batalla^000000";
			next;
			mes "^5533ffGuía de Novatos^000000";
			mes "Te lo marcaré en el mapa.";
			close2;
			viewpoint 1,146,209,1,0xFF0000;
			set ign_tground,2;
			end;
		case 2:
			mes "^5533ffGuía de Novatos^000000";
			mes "Por favor ve a visitar al ^5533ffGuía de Batalla^000000";
			close2;
			emotion e_no1;
			end;
	}
}
